-- Create the database
CREATE DATABASE sqli;

-- Switch to the new database
USE sqli;

-- Create the users table
CREATE TABLE users (
  id INT PRIMARY KEY AUTO_INCREMENT,
  username VARCHAR(50) NOT NULL,
  password VARCHAR(50) NOT NULL
);

